# アプリケーション設定
APP_NAME="Kanho Ads Manager"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# データベース設定
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=kanho_ads_manager_v2
DB_USERNAME=root
DB_PASSWORD=

# セキュリティ
JWT_SECRET=your-jwt-secret-key-here
CSRF_TOKEN_NAME=csrf_token
SESSION_NAME=kanho_session

# メール設定
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@kanho-ads.com
MAIL_FROM_NAME="Kanho Ads Manager"

# Google Ads API設定
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_DEVELOPER_TOKEN=

# Yahoo Ads API設定
YAHOO_ADS_CLIENT_ID=
YAHOO_ADS_CLIENT_SECRET=

# ログ設定
LOG_LEVEL=debug
LOG_PATH=storage/logs/app.log

# キャッシュ設定
CACHE_DRIVER=file
CACHE_PATH=storage/cacheGOOGLE_ADS_DEMO_MODE=false
