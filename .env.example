# データベース設定
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ads_management
DB_USER=root
DB_PASS=

# アプリケーション設定
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_SECRET=your-secret-key-here

# Google Ads API設定
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CLIENT_ID=your-client-id
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-login-customer-id

# Yahoo広告API設定 (Display Ads)
YAHOO_DISPLAY_APP_ID=your-app-id
YAHOO_DISPLAY_SECRET=your-secret
YAHOO_DISPLAY_REFRESH_TOKEN=your-refresh-token
YAHOO_DISPLAY_ACCOUNT_ID=your-account-id

# Yahoo広告API設定 (Search Ads)
YAHOO_SEARCH_LICENSE_ID=your-license-id
YAHOO_SEARCH_API_ACCOUNT_ID=your-api-account-id
YAHOO_SEARCH_API_ACCOUNT_PASSWORD=your-api-account-password
YAHOO_SEARCH_ONBEHALF_OF_ACCOUNT_ID=your-onbehalf-account-id
YAHOO_SEARCH_ONBEHALF_OF_PASSWORD=your-onbehalf-password

# ログ設定
LOG_LEVEL=debug
LOG_PATH=logs/

# セッション設定
SESSION_LIFETIME=7200

# メール設定（請求書送信用）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASS=your-email-password
MAIL_FROM_NAME="広告管理システム"
MAIL_FROM_ADDRESS=noreply@example.com